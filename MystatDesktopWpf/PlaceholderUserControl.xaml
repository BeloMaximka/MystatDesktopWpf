<UserControl x:Class="MystatDesktopWpf.PlaceholderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MystatDesktopWpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:domain="clr-namespace:MystatDesktopWpf.Domain"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <materialDesign:Card Padding="32" Margin="32">
            <StackPanel>
                <TextBlock Text="I'm a placeholder" Style="{DynamicResource MaterialDesignDisplayLargeTextBlock}" HorizontalAlignment="Center"/>
                <TextBox Margin="8" materialDesign:HintAssist.Hint="Change me"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
